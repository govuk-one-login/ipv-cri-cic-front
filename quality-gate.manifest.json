{
  "$schema": "https://raw.githubusercontent.com/govuk-one-login/quality-gates/refs/tags/v0.2.0/schemas/schema.json",
  "services": [
    {
      "service-tag": "cic-front",
      "quality-gates": [
        {
          "check-types": ["code style and linting"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pre-commit.yml",
            "path": "jobs.pre-commit"
          }
        },
        {
          "check-types": ["secret scanning"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pre-merge-checks.yml",
            "path": "jobs.detect-secrets"
          }
        },
        {
          "check-types": ["code style and linting", "unit", "unit test coverage", "new feature", "regression", "visual regression"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pre-merge-checks.yml",
            "path": "jobs.run-checks"
          }
        },
        {
          "check-types": ["code style and linting", "unit"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pre-merge-checks.yml",
            "path": "jobs.sonar-checks"
          }
        }
      ]
    }
  ]
}