{
  "name": "di-cic-front",
  "version": "0.1.0",
  "repository": "git@github.com:alphagov/di-cic-front.git",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "start:watch": "nodemon dist/server.js",
    "build": "npx tsc && yarn build-sass && yarn build-js && yarn minfiy-build-js && yarn copy-assets",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/stylesheets/application.css --style compressed",
    "build-js": "yarn build-js:application && yarn build-js:cookies && yarn build-js:all",
    "build-js:application": "mkdir -p dist/public/javascripts; uglifyjs src/assets/javascripts/application.js  node_modules/di-ipv-cri-common-express/src/assets/javascript/application.js --beautify -o dist/public/javascripts/application.js",
    "build-js:cookies": "mkdir -p dist/public/javascripts; uglifyjs node_modules/di-ipv-cri-common-express/src/assets/javascript/cookies.js --beautify -o dist/public/javascripts/cookies.js",
    "build-js:all": "mkdir -p dist/public/javascripts; uglifyjs node_modules/govuk-frontend/govuk/all.js node_modules/hmpo-components/all.js --beautify -o dist/public/javascripts/all.js",
    "copy-assets": "mkdir -p dist && copyfiles -u 1 src/**/*.njk dist/ src/locales/**/** dist/ && copyfiles -u 3 src/assets/javascript/*.js dist/public/scripts  -e **/all.js && cp node_modules/govuk-frontend/govuk/all.js dist/public/scripts && copyfiles -u 3 src/assets/images/*.svg  dist/public/images",
    "build:watch": "npx tsc --watch",
    "lint": "eslint .",
    "minfiy-build-js": "uglifyjs src/assets/javascript/app.js -c -m",
    "test:unit": "mocha -p tsconfig.json --recursive \"**/**/*.test.ts\"",
    "test:unit:ci": "mocha tsconfig.json --reporter mocha-junit-reporter --reporter-options mochaFile=./results.xml --recursive \"**/**/*.test.ts\"",
    "test:integration": "cucumber-js test/browser/features/**/*.feature test/browser/**/*.feature --require test/browser/support/setup.js --require test/browser/step_definitions/**/*.js",
    "test:integration:local": "yarn build && npm-run-all -p -r start test:integration",
    "prepare": "husky install"
  },
  "mocha": {
    "diff": true,
    "extension": [
      "js",
      "ts"
    ],
    "timeout": 20000,
    "recursive": true,
    "require": [
      "ts-node/register"
    ],
    "exit": true
  },
  "engines": {
    "node": "16.x",
    "yarn": "1.22.x"
  },
  "nodemonConfig": {
    "ext": "ts,js,json,html"
  },
  "packageManager": "yarn@2.4.3",
  "devDependencies": {
    "@cucumber/cucumber": "^8.6.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/mocha": "^9.1.0",
    "@types/mock-req-res": "^1.1.3",
    "@types/node": "^17.0.25",
    "@types/nunjucks": "^3.2.1",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "helmet": "^5.0.2",
    "husky": "^8.0.1",
    "mocha": "10.0.0",
    "mocha-multi-reporters": "1.5.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "sass": "1.49.9",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.2.2",
    "ts-node": "^10.5.0",
    "typescript": "4.5.4",
    "uglify-js": "3.15.1",
    "wait-on": "6.0.1"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cookie-parser": "^1.4.5",
    "copyfiles": "2.4.1",
    "di-ipv-cri-common-express": "alphagov/di-ipv-cri-common-express.git#v0.0.36",
    "dotenv": "^16.0.1",
    "express": "4.17.3",
    "govuk-frontend": "^4.0.1",
    "hmpo-app": "2.0.0",
    "hmpo-components": "5.3.1",
    "hmpo-config": "2.2.0",
    "hmpo-i18n": "5.0.1",
    "hmpo-logger": "6.0.0",
    "i18next": "^21.6.5",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.2.1",
    "nunjucks": "^3.2.3"
  }
}
